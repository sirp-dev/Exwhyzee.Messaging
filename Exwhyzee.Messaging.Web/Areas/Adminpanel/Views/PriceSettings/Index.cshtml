@model IEnumerable<Exwhyzee.Messaging.Web.Models.PriceSetting>

@{
    ViewBag.Title = "Price Settings";
}

<section class="content-header">
    <h1>
        Dashboard
        <small>Price Settings</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Price Settings</a></li>
        <li class="active">All Price Settings</li>
    </ol>
</section>
<section class="content">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Price Settings </h3>

            <span class="pull-right">
                <a href="@Url.Content(" ../../adminpanel/pricesettings/CreatePriceSetting")" class="btn btn-app"><i class="fa fa-plus-circle"></i>Add Price Setting</a>
            </span>
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NetworkProvider)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DigitCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitsPerSms)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NetworkProvider)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DigitCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitsPerSms)
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-info btn-sm">Action</button>
                                <button type="button" class="btn btn-info dropdown-toggle btn-sm" data-toggle="dropdown">
                                    <span class="caret"></span>
                                    <span class="sr-only">Toggle Dropdown</span>
                                </button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.PriceSettingId })</li>
                                    <li>@Html.ActionLink("Details", "PriceSettingDetails", new { id = item.PriceSettingId })</li>
                                    <li>@Html.ActionLink("Delete", "Delete", new { id = item.PriceSettingId })</li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</section>