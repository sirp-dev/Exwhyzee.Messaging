@model IEnumerable<Exwhyzee.Messaging.Web.Models.BatchVoucher>

@{
    ViewBag.Title = "Batch Vouchers";
}


<section class="content-header">
    <h1>
        Dashboard
        <small>Vouchers</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Vouchers</a></li>
        <li class="active">Batch</li>
    </ol>
</section>

<section class="content">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Batches - Vouchers </h3>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Generated By
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BatchNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateGenerated)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BatchNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateGenerated)
                            </td>
                            <td>

                                @Html.ActionLink("Vouchers", "VouchersInBatches", new { id = item.BatchVoucherId }) |
                                @Html.ActionLink("Preview for Print", "VouchersPreview", new { id = item.BatchVoucherId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>

</section>

@section scripts{

    <script src="~/Content/Dashboard/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/Dashboard/plugins/datatables/dataTables.bootstrap.min.js"></script>

    <script>
        $(function () {
            $("#example1").DataTable();

        });
    </script>
}