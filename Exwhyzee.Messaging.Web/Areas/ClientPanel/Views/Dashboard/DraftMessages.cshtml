@model IEnumerable<Exwhyzee.Messaging.Web.Models.Message>

@{
    ViewBag.Title = "Message History";
}

<section class="content-header">
    <h1>
        Dashboard(Client)
        <small>Draft Messages</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Draft Messages</a></li>
        <li class="active">Messages</li>
    </ol>
</section>
<section class="content">

    <div class="box box-info">
        <div class="box-header">
            <h3 class="box-title">Draft Messages </h3>

            @*<span class="pull-right">
                    <a href="@Url.Content(" ../../apisettings/Create")" class="btn btn-app"><i class="fa fa-plus-circle"></i>Add API Setting</a>
                </span>*@
        </div>
        <div class="box-body">
            <table class="table table-bordered table-striped" id="example1">
                <thead>
                    <tr>
                        <th>
                            <b>Sender Id</b>
                            @*@Html.DisplayNameFor(model => model.SenderId)*@
                        </th>
                        <th>
                            <b>Units Used</b>
                            @*@Html.DisplayNameFor(model => model.UnitsUsed)*@
                        </th>
                        <th>
                            <b>Scheduled Date</b>
                            @*@Html.DisplayNameFor(model => model.Scheduleddate)*@
                        </th>
                        <th>
                            <b>Delivered Date</b>
                            @*@Html.DisplayNameFor(model => model.DeliveredDate)*@
                        </th>
                        <th>
                            <b>Status</b>
                            @*@Html.DisplayNameFor(model => model.Status)*@
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SenderId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitsUsed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Scheduleddate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeliveredDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "SendDraft", new { id = item.MessageId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section scripts{

    <script src="~/Content/Dashboard/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/Dashboard/plugins/datatables/dataTables.bootstrap.min.js"></script>

    <script>
        $(function () {
            $("#example1").DataTable();

        });
    </script>
}