@model IEnumerable<Exwhyzee.Messaging.Web.Models.Group>

@{
    ViewBag.Title = "ListGroupContact";
}

<section class="content">


    <div class="box box-success">
        <div class="box-header">

        </div>
        <div class="box-body">

            @using (Html.BeginForm("ListGroupContact", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                
                <label> username </label>   <input name="username" type="text" />


                <input value="fetch" type="submit" />
            }
            <table class="table">
                <tr>
                    <th>
                       Group Id
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.GpId)
                    </th>

                    <th>
                        contact
                    </th>

                </tr>
                @if (Model != null)
                {
                    foreach (var item in Model)
                {
                        <tr>
                            <td>
                               @item.GroupId
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.GpId)
                            </td>
                            <td>
                                @item.Contacts.Count()
                            </td>

                        </tr>
                    }
                }
             

            </table>
            </div>
        </div>
    </section>
