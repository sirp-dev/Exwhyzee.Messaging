@model IEnumerable<Exwhyzee.Messaging.Web.Models.ApiSetting>

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>
        Dashboard
        <small>API Settings</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> API Settings</a></li>
        <li class="active">All API Settings</li>
    </ol>
</section>
<section class="content">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">API Settings </h3>

            <span class="pull-right">
                <a href="@Url.Content(" ../../apisettings/Create")" class="btn btn-app"><i class="fa fa-plus-circle"></i>Add API Setting</a>
            </span>
        </div>
        <div class="box-body table-responsive">
            <table class="table table-bordered table-striped">
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sending)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CheckBalance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDefault)
                    </th>

                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.ApiSettingId })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sending)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CheckBalance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDefault)
                    </td>

                </tr>
                }
            </table>
        </div>
    </div>
</section>