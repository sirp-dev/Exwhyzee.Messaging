
@{
    ViewBag.Title = "EditUser";
}

<section class="content-header">
    <h1>
        Dashboard
        <small>Manage User</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Edit User</a></li>
        <li class="active">Client Details</li>
    </ol>
</section>

<section class="content">


    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title pull-left">Client Details </h3>
            <br />
            <h3 class="box-title pull-left">Username: @Html.Display("UserName") </h3>
           

        </div>
        <div class="box-body">
            <div class="col-md-8 col-md-offset-2">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Email Confirmed", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.Editor("EmailConfirmed")
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Phone Number", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.Editor("PhoneNumber", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Phone Number Confirmed", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.Editor("PhoneNumberConfirmed")
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.Label("Lockout End Date Utc", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.Editor("LockoutEndDateUtc", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Lockout Enabled", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.Editor("LockoutEnabled")
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Date Of Birth", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.Editor("DateOfBirth", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    </section>
   
