@using Microsoft.AspNet.Identity

<li class="dropdown user user-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <img src="~/Uploads/user.png" class="user-image" alt="User Image">
        <span class="hidden-xs">@User.Identity.GetUserName()</span>
    </a>
    <ul class="dropdown-menu">
        <!-- User image -->
        <li class="user-header">
            <img src="~/Uploads/user.png" class="img-circle" alt="User Image">
            <p>
                @User.Identity.GetUserName()
                <small>Member</small>
            </p>
        </li>
        <!-- Menu Body -->
        <li class="user-body">
        </li>
        <!-- Menu Footer-->
        <li class="user-footer">
            @using (Html.BeginForm("LogOff", "Account",new {@area = "" }, FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="pull-right">
                   
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Details", "Dashboard", routeValues: new { area = "Clientpanel" }, htmlAttributes: new { title = "Manage", @class = "btn btn-flat btn-primary" })
                </div>
                <div class="pull-left"><a class="btn btn-default btn-flat" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></div>

            }
        </li>
    </ul>
</li>