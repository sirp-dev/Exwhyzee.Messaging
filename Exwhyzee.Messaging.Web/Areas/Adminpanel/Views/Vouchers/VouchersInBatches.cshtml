@model IEnumerable<Exwhyzee.Messaging.Web.Models.Voucher>

@{
    ViewBag.Title = "Vouchers in Batch";
}

<section class="content-header">
    <h1>
        Dashboard
        <small>All Vouchers</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Vouchers</a></li>
        <li class="active">Vouchers in Batch</li>
    </ol>
</section>

<section class="content">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Vouchers in Batch</h3>
            <span class="pull-right">
                <a href="@Url.Content("../../vouchers")" class="btn btn-app"><i class="fa fa-backward"></i>Back</a>
            </span>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">

                <thead>
                    <tr>
                        <th>
                            Generated By
                        </th>
                        <th>
                            Used By
                        </th>
                        <th>
                            Batch Number
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateUsed)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Units)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                       
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BactchVoucher.User.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BactchVoucher.BatchNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateUsed)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Units)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
          
        </div>
    </div>
</section>

@section scripts{

    <script src="~/Content/Dashboard/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/Dashboard/plugins/datatables/dataTables.bootstrap.min.js"></script>

    <script>
        $(function () {
            $("#example1").DataTable();

        });
    </script>
}