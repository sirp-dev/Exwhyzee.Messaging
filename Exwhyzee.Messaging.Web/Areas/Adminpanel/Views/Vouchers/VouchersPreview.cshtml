
@model IEnumerable<Exwhyzee.Messaging.Web.Models.Voucher>

@{
    ViewBag.Title = "Vouchers Preview in Batch";
}

<section class="content-header">
    <h1>
        Dashboard
        <small>All Vouchers</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Vouchers</a></li>
        <li class="active">Vouchers in Batch</li>
    </ol>
</section>

<section class="content">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Vouchers in Batch</h3>
            <span class="pull-right">
                <button class="btn btn-app" onclick="window.print();return false;"><i class="fa fa-print"></i> Print</button>
                <a href="@Url.Content("../../vouchers")" class="btn btn-app"><i class="fa fa-backward"></i> Back</a>

            </span>
        </div>


        <div class="box-body">
            <table id="ExpTable" class="print1 table table-bordered table-striped">

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                XYZSMS VOUCHERS CARD
                            </td>

                        </tr>
                        <tr>

                            <td>
                                <b>Batch Number:</b>  &nbsp;  @Html.DisplayFor(modelItem => item.BactchVoucher.BatchNumber)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>@Html.DisplayNameFor(model => model.Code):</b>   &nbsp; @Html.DisplayFor(modelItem => item.Code)
                            </td>

                        </tr>
                        @*<tr>
                                <td>
                                    ----------------------------------------------------
                                </td>

                            </tr>*@

                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section scripts{

    <script src="~/Content/Dashboard/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/Dashboard/plugins/datatables/dataTables.bootstrap.min.js"></script>

    <script>
        $(function () {
            $("#example1").DataTable();

        });
    </script>

}