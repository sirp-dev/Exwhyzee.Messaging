@{
    ViewBag.Title = "Failed Transaction";
    var tId = ViewBag.Trans;
}

<section class="content-header">
    <h1>
        Dashboard(Client)
        <small>Buy Units</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Buy Units</a></li>
        <li class="active">Complete</li>
    </ol>
</section>

<section class="content">


    <div class="box box-danger">
        <div class="box-header">
            <h3 class="box-title">Complete <small>Successful Transaction</small></h3>
        </div>
        <div class="box-body">

            <div class="col-md-8 col-md-offset-2">
                <div class="alert alert-error">
                    <div class="dl-horizontal">
                        <dl>
                            <dt>Transaction Id:</dt>
                            <dd>@tId.transaction_id</dd>

                            <dt>Memo</dt>
                            <dd>@tId.memo</dd>

                            <dt>Total Amount</dt>
                            <dd>@tId.total_paid_by_buyer</dd>

                            <dt>Status</dt>
                            <dd>@tId.status</dd>

                            <dt>Payment Method</dt>
                            <dd>@tId.method</dd>

                            <dt>Transaction Date</dt>
                            <dd>@tId.date</dd>
                        </dl>
                    </div>
                </div>
            </div>

            </div>
        </div>
    </section>
