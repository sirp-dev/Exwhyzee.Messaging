@model Exwhyzee.Messaging.Web.Models.Client

@{
    ViewBag.Title = "ChangePlan";
}



<section class="content-header">
    <h1>
        Dashboard
        <small> User  Details</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Update</a></li>
        <li class="active">Sms Plan</li>
    </ol>
</section>

<section class="content">

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Change Plan Setting</h3>

            <span class="pull-right">
                <a href="@Url.Content(" ../../Details/")" class="btn btn-app"><i class="fa fa-backward"></i>Back</a>
            </span>
        </div>
        <div class="box-body">
            <div class="col-md-6 col-sm-12 col-md-offset-3">
                <a href="@Url.Action("SmsPlan", "Home", new { area = "" })" target="_blank">
                    <h4 class="text-center" style="font-weight:bolder;">Click to Know about our sms plan</h4>
                </a>
                
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ClientId)
                    @Html.HiddenFor(model => model.UserId)
                    @Html.HiddenFor(model => model.Units)
                    @Html.HiddenFor(model => model.Discount)
                    @Html.HiddenFor(model => model.Surname)
                    @Html.HiddenFor(model => model.FirstName)
                    @Html.HiddenFor(model => model.OtherNames)
                    @Html.HiddenFor(model => model.Discount)
                    @Html.HiddenFor(model => model.AllowNotifications)


                    <div class="form-group">
                        @Html.Label("Choose a Plan", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EnumDropDownListFor(model => model.Plan,"Choose a Plan", htmlAttributes: new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.Plan, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

                }
            </div>
        </div>
    </div>
</section>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
